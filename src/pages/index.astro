---
import Navigation from "../components/Navigation.astro";
import Footer from '../components/Footer.astro';
import "../styles/global.css";
    const pageTitle = "主页";

---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>{pageTitle}</title>

        <style>
            /* 本页样式：使选中文字加粗、放大、模糊并居中 */
            .hero {
                display: flex;
                align-items: center;
                justify-content: center;
                min-height: 100vh; /* 根据需要改为 100vh */
                padding: 2rem;
                box-sizing: border-box;
            }

            .hero-text {
                font-weight: 800;
                /* 响应式放大：在窄屏使用相对大小，宽屏限制最大值 */
                font-size: clamp(1.6rem, 4vw, 2.6rem);
                filter: blur(2px); /* 模糊效果，值可调整 */
                text-align: center;
                line-height: 1.6;
                margin: 0;
                color: #fff; /* 文字设为白色 */
            }
        </style>
    </head>
	<Navigation />
    <body>
        <section class="hero">
            <p class="hero-text">
                欢迎来到被窝ゆめみ的世界！
			 </p>
        </section>
		<p>

    <Footer />
    </body>

</html>
